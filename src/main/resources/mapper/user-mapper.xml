<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pjt.project.mapper.UserMapper">

    <resultMap id="userResult" type="com.pjt.project.model.User">
        <result property="userId" column="USER_ID"/>
        <result property="userPwd" column="USER_PWD"/>
    </resultMap>
<!-- todo:   @Column 대체가능한지 판단-->

    <select id="selectUser" resultType="com.pjt.project.model.User" resultMap="userResult">
        SELECT *
        FROM USER
        WHERE USER_ID = #{userId}
    </select>

</mapper>